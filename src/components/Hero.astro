---
const { title, subtitle } = Astro.props;
---
<section id="home" class="relative h-screen bg-cover bg-center" style="background-image: url('/hero-bg.jpg');">
  <div class="absolute inset-0 bg-black-90, backdrop-blur-lg/60"></div>
  <div class="relative z-10 flex flex-col items-center justify-center h-full text-center px-6">
    <h1 class="text-5xl md:text-7xl font-bold text-white leading-tight">
      {title}
    </h1>
    <p class="mt-4 text-lg md:text-xl text-gray-200 max-w-2xl">
      {subtitle}
    </p>
    <a href="#planes"
       class="mt-8 bg-yellow-600 hover:bg-yellow-700 text-white px-8 py-3 rounded-xl text-xl font-semibold transition">
      Ver planes
    </a>
  </div>
</section>
